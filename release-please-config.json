{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/refs/heads/main/schemas/config.json",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-v-in-tag": true,
  "separate-pull-requests": true,
  "extra-label": "release-please",
  "release-type": "simple",
  "packages": {
    ".": {
      "release-type": "simple",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "pull-request-title-pattern": "chore: release ${version}",
      "changelog-sections": [
        { "type": "feat", "section": "Features" },
        { "type": "fix", "section": "Bug Fixes" },
        { "type": "perf", "section": "Performance Improvements" },
        { "type": "docs", "section": "Documentation", "hidden": false },
        {
          "type": "chore",
          "section": "Miscellaneous Chores",
          "hidden": false
        },
        { "type": "build", "section": "Build", "hidden": false },
        { "type": "ci", "section": "CI/CD", "hidden": false }
      ],
      "extra-files": [
        {
          "type": "generic",
          "path": "charts/onco-analytics-on-fhir/Chart.yaml"
        },
        {
          "type": "generic",
          "path": "charts/prerequisites/Chart.yaml"
        },
        {
          "type": "generic",
          "path": "docker-compose/compose.decompose-xmls.yaml"
        },
        {
          "type": "generic",
          "path": "docker-compose/compose.obds-fhir-to-opal.yaml"
        },
        {
          "type": "generic",
          "path": "docker-compose/compose.analytics-on-fhir.yaml"
        },
        {
          "type": "generic",
          "path": "README.md"
        }
      ]
    }
  }
}
